<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#39ff14"
    android:orientation="vertical"
    tools:context=".SellAppointment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/logo"></ImageView>

    <TextView
        android:id="@+id/PageHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sell Scrap now"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="35sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:text="* what is your Address ?" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#fff"
        android:hint="Complete Address"
        android:textStyle="italic">

    </EditText>

    <EditText
        android:id="@+id/assign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#fff"
        android:hint="role"
        android:textStyle="italic"
        android:text="unassigned"
        android:visibility="gone"

        >
    </EditText>
    <EditText
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#fff"
        android:hint="status"
        android:textStyle="italic"
        android:text="Active"
        android:visibility="gone"
        >
    </EditText>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:text="* what is the number of contact person ?" />



    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#fff"
        android:hint="Mobile Number"

        android:inputType="number|textPhonetic"
        android:phoneNumber="true"
        android:textStyle="italic">

    </EditText>
    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="25dp"
        android:text="Book now"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>